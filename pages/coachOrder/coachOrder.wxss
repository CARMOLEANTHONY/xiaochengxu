.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

view {
  overflow: hidden;
}

.partner-list {
  margin-top: 20rpx;
}

.list-item {
  width: 100%;
  height: 240rpx;
  padding: 28rpx;
  background-color: #fff;
  padding-left: 188rpx;
  position: relative;
  border-bottom: 1px solid #dbd6d6;
}

.list-item> .left-content {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 28rpx;
  top: 50%;
  transform: translateY(-50%);
  overflow: visible;
}

.list-item> .left-content>image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.left-content>view {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 50%);
  line-height: 40rpx;
  font-size: 16rpx;
  color: #fff;
  background-color: #3b99fc;
  border-radius: 8rpx;
  padding: 0 8rpx 0 30rpx;
  min-width: 100rpx;
}

.left-content>view>image {
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  top: 50%;
  left: 10rpx;
  transform: translateY(-50%);
  vertical-align: middle;
}

.right-content {
  padding: 20rpx;
}

.right-content>view {
  font-size: 26rpx;
  color: #9b9b9b;
  line-height: 50rpx;
}

.right-content>.black-style {
  font-size: 32rpx;
  color: #000;
}

.fr {
  float: right;
}

.green-style {
  color: #7ed321;
}

.block-item {
}

.title {
  padding: 0 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #888;
}

.item-list {
  background-color: #fff;
  padding-left: 20rpx;
}

.item {
  padding-left: 180rpx;
  border-bottom: 1px solid #e5e5e5;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
}

.item-left-content {
  position: absolute;
  left: 0;
  top: 0;
  width: 180rpx;
  color: #000;
  font-size: 34rpx;
}

.item-right-content {
  color: #000;
  font-size: 34rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.item-right-content input {
  height: 90rpx;
  line-height: 90rpx;
}

.item-right-content picker, .picker {
   height: 90rpx;
  line-height: 90rpx;
}
