.header-swiper, .header-swiper swiper, .header-swiper swiper-item,
.header-swiper swiper-item image {
  width: 100%;
  height: 432rpx;
  position: relative;
}

.item {
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
  line-height: 80rpx;
  padding: 0 30rpx;
  overflow: hidden;
}

.item image {
  width: 16rpx;
  height: 80rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
}

.title-style {
  background-color: transparent;
  color: #888;
}

.desc {
  padding: 30rpx;
  background-color: #fff;
  margin: 40rpx 0;
}

.desc-title {
  color: #F4B349;
  font-size: 40rpx;
  line-height: 60rpx;
  text-align: center;
  font-weight: 700;
}