
.list-group-nav {
  line-height: 88rpx;
  font-size: 28rpx;
  color: #888;
  padding-left: 30rpx;
}
.rank-item {
  background: #fff;
  padding: 10px;
  display: flex;
  align-items: center;
  position: relative;
  border-bottom: 1px #ebebeb solid;
}
.rank-item image {
  width: 300rpx;
  height: 200rpx;
}
.rank-content {
  margin: 0 20rpx;
}
.rank-content text{
  display: block;
  font-size: 13px;
  color: #333;
  line-height: 28rpx;
  margin-bottom: 24rpx;
}
.rank-content text:first-child{
  font-size: 16px;
  line-height: 36rpx;
  margin-bottom: 26rpx;
}
.rank-content text:last-child{
  margin-bottom: 0;
}
.list-item {
  height: 44px;
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
}
.list-item::after {
  content: '';
  position: absolute;
  left: 20rpx;
  right: 0;
  bottom: 0;
  height: 1px;
  background: #ebebeb;
}
.list-item text{
  display: inline-block;
  width: 200rpx;
  padding-left: 20rpx;
  font-size: 14px;
}
.list-item input{
  width: 500rpx;
  font-size: 14px;
}
.choose-list-item {
  height: 44px;
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
}
.choose-list-item::after {
  content: '';
  position: absolute;
  left: 20rpx;
  right: 0;
  bottom: 0;
  height: 1px;
  background: #ebebeb;
}
.list-item:last-child:after,
.choose-list-item:last-child:after {
  height: 0px;
}
.choose-list-item image {
  width: 21px;
  height: 21px;
  margin: 0 20rpx;
}
.choose-list-item text:nth-child(2) {
  font-size: 14px;
  width: 140rpx;
  display: inline-block;
  color: #333;
}
.choose-list-item text:nth-child(3) {
  font-size: 14px;
  width: 300rpx;
  display: inline-block;
  color: #999;
  text-align: center;
}
.choose-list-item text:nth-child(4) {
  font-size: 14px;
  width: 200rpx;
  display: inline-block;
  color: #eb551b;
  text-align: right;
  padding-right: 10rpx;
}
.total-cost {
  height: 44px;
  background: #fff;
  display: flex;
  align-items: center;
}
.total-cost text{
  font-size: 14px;
  color: #333;
  display: inline-block;
  margin-left: 20rpx;
}
.total-cost text:nth-child(2){
  color: #eb551b;
  margin-left: 30rpx;
}
.footer-button {
  display: block;
  margin: 40rpx 30rpx 60rpx;
  background: #f4b349;
  color: #fff;
  font-size: 15px;
  height: 47px;
  padding: 0;
  line-height: 47px;
}
button::after{
  border: none;
}