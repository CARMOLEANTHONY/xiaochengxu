.content-item .item-header {
  height: 90rpx;
  line-height: 90rpx;
  text-indent: 34rpx;
  color: #888;
  font-size: 28rpx;
}

.content-item .item-body {
  background-color: #fff;
}

.item {
  padding-left: 30rpx;
  line-height: 92rpx;
  color: #888;
}

.item .item-ceil {
  border-bottom: 1px solid #e5e5e5;
  height: 92rpx;
  padding-right: 26rpx;
  position: relative;
  padding-left: 226rpx;
  overflow: hidden;
}

.item .item-ceil .right-link {
  height: 92rpx;
}

.address_style {
  padding-right: 50rpx;
  height: 92rpx;
  line-height: 92rpx;
  width: 100%;
}

.cost-type textarea {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx;
  line-height: 48rpx;
  font-size: 36rpx;
  background-color: #fff;
  text-indent: 2em;
}

.right-link image {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 28rpx;
}

.item .item-ceil .ceil-label {
  position: absolute;
  top: 0;
  left: 0;
  width: 226rpx;
  color: #000;
  font-size: 34rpx;
}

.right-desc {
  display: inline-block;
  height: 100%;
  width: 100%;
}

datetimepicker {
  display: block;
  height: 100%;
}

datetimepicker input, .right-desc input {
  height: 90rpx;
  line-height: 90rpx;
}

.cost {
  position: relative;
}

.cost image {
  width: 26rpx;
  height: 20rpx;
  position: absolute;
  top: 50%;
  right: 50rpx;
  transform: translateY(-50%);
}
