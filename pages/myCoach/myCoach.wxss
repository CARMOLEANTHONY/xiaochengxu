
.nav-box {
  display: flex;
  height: 44px;
  background: #fff;
}

.nav-item {
  width: 33.3%;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-item text {
  font-size: 16px;
  font-weight: bold;
}

.nav-item-active text {
  font-size: 16px;
  font-weight: bold;
  color: #f4b349;
  border-bottom: 4px #f4b349 solid;
}