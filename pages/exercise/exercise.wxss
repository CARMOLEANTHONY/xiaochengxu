/* pages/exercise/exercise.wxss */

.header-swiper, .header-swiper swiper, .header-swiper swiper-item,
.header-swiper swiper-item image {
  width: 100%;
  height: 432rpx;
  position: relative;
}


.header-swiper>text {
  position: absolute;
  top: 28rpx;
  right: 24rpx;
  color: #fff;
  z-index: 9999;
  font-size: 40rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-weight: bold;
  padding: 0 30rpx;
  background-color: rgba(0, 0, 0, 0.3);
}

.nav-box {
  height: 166rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
}

.nav-item {
  width: 86rpx;
  height: 100%;
  padding-top: 30rpx;
  text-align: center;
}

.nav-item image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
  border-radius: 50%;
}

.nav-item text {
  color: #4a4a4a;
  font-size: 30rpx;
}

.list-box {
  margin-bottom: 30rpx;
}

.list-box .list-title {
  height: 104rpx;
  color: #999999;
  font-size: 34rpx;
  padding-left: 28rpx;
  line-height: 104rpx;
}

.partner-box {
  height: 304rpx;
}

.list-box .list {
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 200rpx;
}

.list-item {
  min-width: 108rpx;
  height: 160rpx;
  position: relative;
  text-align: center;
}

.list-item .img1 {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto 20rpx;
}

.list-item .img2 {
  position: absolute;
  top: 90rpx;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 20rpx;
}

.list-item text {
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  padding: 0 10rpx;
  border-radius: 10rpx;
  background-color: #f5a623;
}
