.list-view {
  margin-top: 20rpx;
}

.list-view-item {
  padding: 10px 5px 15px;
  border-bottom: 1px #ebebeb solid;
  background-color: #fff;
}

.list-content-image {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.list-content-image image {
  width: 194rpx;
  height: 128rpx;
}

.list-head {
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 15px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list-head-title {
  font-size: 36rpx;
  color: #030303;
}

.list-content {
  padding: 10px 0px 0;
}

.list-content-text {
  font-size: 14px;
  color: #9b9b9b;
  line-height: 18px;
  word-break: break-all;
  padding: 0 15px;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.list-content-image {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  -webkit-flex-direction: row;
  padding: 5px 10px 0;
}

.list-content-image image {
  margin: 5px;
}

.list-footer {
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
}

.list-footer-name {
  font-size: 12px;
  color: #4a90e2;
  margin-left: 15px;
}

.list-footer-date {
  font-size: 12px;
  color: #b6b3b3;
}

.list-footer-event {
  font-size: 12px;
  color: #4a90e2;
}

.list-footer-eva {
  position: absolute;
  right: 60px;
  top: 50%;
  transform: translateY(-50%);
}

.list-footer-eva image {
  width: 14px;
  height: 12px;
  vertical-align: middle;
}

.list-footer-eva text, .list-footer-praise text {
  font-size: 12px;
  color: #444;
  margin-left: 5px;
}

.list-footer-praise {
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translateY(-50%);
}

.list-footer-praise image {
  width: 14px;
  height: 12px;
}
