.page-content-footer{
  padding: 0 0rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.page-content-footer-title {
  line-height: 36px;
  font-size: 15px;
  color: #b2b2b2;
  display: block;
  padding: 0 30rpx;
  border-bottom: 2rpx #ebebeb solid;
  box-sizing: border-box;
}

.no-data {
  background-color: #fff;
  text-align: center;
}

.evl-item {
  padding: 40rpx 80rpx 40rpx 100rpx;
  position: relative;
}

.evl-item .head_img {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #dedede;
}

.time_item {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}

.gray_style {
  font-size: 26rpx;
  color: #B2B2B2;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.item_content {
  line-height: 40rpx;
  padding: 10rpx 0;
}

.like_icon image{
  width: 30rpx;
  height: 30rpx;
  padding-right: 20rpx;
}