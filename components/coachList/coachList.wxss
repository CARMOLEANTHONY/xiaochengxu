.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.partner-list {
  margin-top: 20rpx;
}

.list-item {
  width: 100%;
  height: 240rpx;
  padding: 28rpx;
  background-color: #fff;
  padding-left: 188rpx;
  position: relative;
  border-bottom: 1px solid #dbd6d6;
}

.list-item> .left-content {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 28rpx;
  top: 50%;
  transform: translateY(-50%);
  overflow: visible;
}

.list-item> .left-content>image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #CCC;
}

.left-content>view {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 50%);
  line-height: 40rpx;
  font-size: 16rpx;
  color: #fff;
  background-color: #3b99fc;
  border-radius: 8rpx;
  padding: 0 8rpx 0 30rpx;
  min-width: 100rpx;
}

.left-content>view>image {
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  top: 50%;
  left: 10rpx;
  transform: translateY(-50%);
  vertical-align: middle;
}

.right-content {
  padding: 20rpx;
}

.right-content>view {
  font-size: 26rpx;
  color: #9B9B9B;
  line-height: 50rpx;
}

.right-content>.black-style {
  font-size: 32rpx;
  color: #000;
}

.fr {
  float: right;
}

.green-style {
  color: #7ED321;
}
